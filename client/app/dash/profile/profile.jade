md-content.md-padding(md-theme='dark', layout='row', layout-sm='column')

md-card
  md-card-title
    md-card-title-text
      span.md-headline {{vm.user.name}}
      table
        tr
          td User Level
          td {{vm.user.level}}
        tr(ng-hide = '0 == vm.user.country.length')
          td Country
          td {{vm.user.country}}
        tr(ng-hide = '0 == vm.user.description.length')
          td Description
          td {{vm.user.description}}
    md-card-title-media
      .md-media-lg.card-media
  md-card-actions(layout='row', layout-align='end center', ng-hide='vm.isSelf')
    md-button {{vm.friendText}}
    md-button Message

div(ng-controller='ProfileCtrl', layout='column', style='height:600px', ng-cloak='')
  md-toolbar(md-scroll-shrink='', ng-if='true')
    .md-toolbar-tools
      h3
        span Friends
  md-content(flex='')
    md-list
      md-list-item.md-3-line(ng-repeat='item in vm.user')
        //img.md-avatar(ng-src='{{item.face}}', alt='{{item.who}}')
        .md-list-item-text
          h3 {{item}}
          h4
        md-divider(inset='')

