md-card()
  md-card-title
    md-card-title-text
      span.md-headline {{user.name}}
      table
        tr
          td User Level
          td {{user.level}}
        tr()
          td Country
          td {{user.country}}
        tr()
          td Description
          td {{user.description}}
    md-card-title-media
      .md-media-lg.card-media
  md-card-actions(layout='row', layout-align='end center', ng-hide='isSelf')
    md-button {{friendText}}
    md-button Message
md-card()
  div(layout='column')
    md-toolbar()
      .md-toolbar-tools
        h3
          span Friends
    md-content(flex='')
      md-list
        md-list-item.md-3-line(ng-repeat='item in user')
          //img.md-avatar(ng-src='{{item.face}}', alt='{{item.who}}')
          .md-list-item-text
            h3 {{item}}
            h4
          md-divider(inset='')

