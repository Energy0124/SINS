header#banner.hero-unit
  .container
    h1 'Hello world!
    p.lead Welcome to SINS Sins Is Not Steam

.container
  .row
    .col-lg-12
      h1.page-header Test:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='thing in main.awesomeThings')
        li
          a(href='#', tooltip='{{thing.info}}')
